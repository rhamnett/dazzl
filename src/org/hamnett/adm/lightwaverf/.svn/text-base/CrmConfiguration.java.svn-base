package org.hamnett.adm.crm;

import java.util.Collection;

/**
 * Configuration for crm.
 * 
 * @author srt
 * @version $Id: CrmConfiguration.java,v 1.2 2005-10-16 13:53:21 rick Exp $
 */
public interface CrmConfiguration
{
    /**
     * Determines if crm incoming record is enabled.
     * 
     * @return <code>true</code> if bluetooth monitoring is enabled,
     *         <code>false</code> otherwise.
     */
    boolean isEnabled();

    /**
     * Enables or disables crm popup records.
     * 
     * @param enabled <code>true</code> to enable crm popups,
     *            <code>false</code> to diable it.
     */
    void setEnabled(boolean enabled);

    /**
     * Returns the address of the crm server.
     * 
     * @return the address of the crm server.
     */
    String getServerAddress();

    /**
     *
     */
     Collection getChannels();

     /**
      *
      */
     void setChannels(Collection channels);

    /**
     * Returns the executable of the browser.
     * 
     * @return the executable of the browser.
     */
    String getBrowserPath();

    /**
     * Sets the path of the browser.
     * 
     * @param browserPath the path of the browser.
     */
    void setBrowserPath(String browserPath);

    /**
     * Sets the address of the crm server.
     * 
     * @param serverAddress the address of the crm server.
     */
    void setServerAddress(String serverAddress);
}
