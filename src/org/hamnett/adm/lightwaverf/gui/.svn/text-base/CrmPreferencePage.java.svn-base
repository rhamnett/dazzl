package org.hamnett.adm.crm.gui;

import org.eclipse.jface.preference.BooleanFieldEditor;
import org.eclipse.jface.preference.FieldEditorPreferencePage;
import org.eclipse.jface.preference.StringFieldEditor;
import org.eclipse.swt.widgets.Composite;
import org.hamnett.adm.crm.Crm;
import org.hamnett.adm.crm.Messages;

public class CrmPreferencePage extends FieldEditorPreferencePage
{
    private BooleanFieldEditor enabled;
    private StringFieldEditor serverAddress;
    private StringFieldEditor browserPath;

    /**
     * Creates a new instance
     */
    public CrmPreferencePage()
    {
        super(Messages.getString("CrmPreferencePage.title"), GRID); //$NON-NLS-1$
        setDescription(org.hamnett.adm.crm.Messages
                .getString("CrmPreferencePage.description")); //$NON-NLS-1$
    }

    protected void createFieldEditors()
    {
	Composite p;
	p = getFieldEditorParent();
        enabled = new BooleanFieldEditor(
                Crm.ENABLED_PREFERENCE,
                Messages.getString("CrmPreferencePage.enabled"), getFieldEditorParent()); //$NON-NLS-1$
        addField(enabled);

        serverAddress = new StringFieldEditor(
                Crm.SERVER_ADDRESS_PREFERENCE,
                Messages.getString("CrmPreferencePage.serverAddress"), getFieldEditorParent()); //$NON-NLS-1$
		serverAddress.getLabelControl(p).setToolTipText(
		Messages.getString("CrmPreferencePage.serverAddress.tooltip"));
        addField(serverAddress);

        browserPath = new StringFieldEditor(
                Crm.BROWSER_PATH,
                Messages.getString("CrmPreferencePage.browserPath"), getFieldEditorParent()); //$NON-NLS-1$
        addField(browserPath);

    }
}
